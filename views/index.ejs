<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="styles.css">

</head>

<body>

  <body>
    <div>
      <h1>FORM</h1>
      <form action="/result" method="POST">
        <label for="name">Name: </label>
        <input type="text" name="name" class="form-control" placeholder="Name" aria-label="first name" required>

        <label for="ubication">Dojo Location</label>
        <select name="ubication" class="form-select" placeholder="Location" aria-label="Default select example"
          required>
          <option selected>Location</option>
          <option value="Chile">Chile</option>
          <option value="España">España</option>
          <option value="USA">USA</option>
          <option value="Mexico">Mexico</option>
        </select>

        <label for="language">Favorite Language: </label>
        <select name="language" class="form-select" placeholder="selection" aria-label="Default select example"
          required>
          <option selected>Language</option>
          <option value="JavaScript">JavaScript</option>
          <option value="Python">Python</option>
          <option value="Node">Node</option>
          <option value="SQL">SQL</option>
        </select>

        <h6 class="comment">Comment (optional): </h6>
        <textarea name="comment"></textarea>
        <br>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>
    <div>
      <img src="Unknown.png">
    </div>

    <script src="/socket.io/socket.io.js"></script>

    <script>

      const socket = io('http://localhost:8000');
      $('#formulario').on('submit', function (ev) {
        ev.preventDefault();

        const inf = {
          name: $('#name').val(),
          location: $('#ubicacion').val(),
          language: $("#lenguage").val(),
          comment: $("#comentario").val()
        };
        socket.emit('formulario_publicacion', inf);

      });

      socket.on('mensaje_actualizado', function (inf) {
        console.log(inf);

        //console.log('Llego!');
        $("#index_form").html(`
      <div class="col-12 fw-normal align-middle border border-danger w-100 h-150 px-2 mx-auto rounded">
      <br>
      <h5 class="text-center">Information:</h5>
      <br>
      <p>Name: ${inf.name}</p>
      <p>Location: ${inf.location}</p>
      <p>Language: ${inf.lenguaje}</p>
      <p>Comment: ${inf.comment}</p>
      <br>
      </div>
      `);
      });

    </script>

  </body>

</html>
</body>

</html>